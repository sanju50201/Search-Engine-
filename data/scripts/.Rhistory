pretty_name <- function (name) {
names <- unlist(strsplit(name, split="\\s+"));
if (len(names) == 3) {
names[2] <- substr(names[2], 1, 1);
}
res <- "";
for (n in names) {
res <- paste(res, n)
}
res
}
pretty_name("Oleg Vlad Besov")
