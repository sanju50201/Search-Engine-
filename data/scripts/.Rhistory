pretty_name <- function (name) {
names <- unlist(strsplit(name, split="\\s+"));
prefix <- ""
for (i in 1:(length(names) - 1)) {
prefix <- paste(prefix, sub(names[i], 1, 1), sep="")
}
paste(prefix, names[length(names)]);
}
